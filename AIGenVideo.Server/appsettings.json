{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "None",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] ",
        "UseUtcTimestamp": false
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Your-Connection-String-Here",
    "Redis": "localhost:6379"
  },
  "JWT": {
    "Issuer": "Your-Issuer",
    "Audience": "Your-Audience",
    "SigningKey": "Your-JWT-Signing-Key",
    "RefeshTokenExpirationInMinutes": 720,
    "AccessTokenExpirationInMinutes": 10
  },
  "PasswordToken": {
    "LifeTimeInMinutes": 60
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderName": "Your Sender Name",
    "SenderEmail": "your.email@example.com",
    "Password": "your-email-app-password"
  },
  "Authentication": {
    "Google": {
      "ClientId": "your-google-client-id",
      "ClientSecret": "your-google-client-secret",
      "RedirectUri": "https://localhost:50464"
    },
    "TikTok": {
      "ClientId": "your-tiktok-client-id",
      "ClientSecret": "your-tiktok-client-secret",
      "RedirectUri": "https://your-ngrok-or-domain/oauth/tiktok-callback"
    },
    "Facebook": {
      "ClientId": "your-facebook-client-id",
      "ClientSecret": "your-facebook-client-secret",
      "RedirectUri": "https://your-ngrok-or-domain/oauth/facebook-callback"
    }
  },
  "Payment": {
    "VnPay": {
      "ReturnUrl": "https://localhost:7073/api/payment/vnpay-return",
      "PaymentUrl": "https://sandbox.vnpayment.vn/paymentv2/vpcpay.html",
      "TmnCode": "your-vnpay-tmn-code",
      "HashSecret": "your-vnpay-secret",
      "Version": "2.1.0"
    },
    "Momo": {
      "PartnerCode": "MOMO",
      "ReturnUrl": "https://localhost:7073/api/payment/momo-return",
      "PaymentUrl": "https://test-payment.momo.vn/v2/gateway/api/create",
      "IpnUrl": "https://localhost:7073/api/payment/momo-ipn",
      "AccessKey": "your-momo-access-key",
      "SecretKey": "your-momo-secret-key"
    }
  },
  "Gemini": {
    "ApiKey": "your-gemini-api-key"
  },
  "ApiKeys": {
    "YouTube": "your-youtube-api-key",
    "Gemini": "your-gemini-api-key",
    "Groq": "your-groq-api-key",
    "AssemblyAI": "your-assemblyai-api-key"
  },
  "GoogleCloud": {
    "CredentialsPath": "google-credentials.json",
    "DefaultVoice": "en-US-Standard-B"
  }
}
